<% layout('layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card" >
            <img src="<%= campground.image %> " alt="">
            <div class="card-body">
                <h3 class="card-title"><%= campground.title %></h3>
                <h4><%= campground.location %> </h4>
                <h5 class="text-muted">Price:&nbsp;$<%= campground.price %>.00</h5>
               <p><%= campground.description %> </p>
               <div class="mb-3">
                    <a href="<%= campground._id %>/edit" class="btn btn-primary">Edit campground</a>
                    <a href="/campgrounds" class="btn btn-outline-primary">All campgrounds</a>
               </div>     
                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
</div>
