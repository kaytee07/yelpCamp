    <% layout('layouts/boilerplate.ejs') %> 
    <h1>All Campgrounds</h1>
    <div>
    <a class="btn btn-dark mb-3" href="campgrounds/new">Create campground</a>
    </div>
    <% for(let campground of campgrounds) { %> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %> " class="card-img-top" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text">
                            <%= campground.description %> 
                        </p>
                        <p class="card-text text-muted">
                            <%= campground.location %>
                        </p>
                        <a href="/campgrounds/<%= campground.id %> " class="btn btn-dark">view campground</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %> 
    
